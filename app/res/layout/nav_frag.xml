<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/L1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="#E1E1E1"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E1E1E1"
                    android:drawableLeft="@drawable/megoreward"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:text="Rewards"
                    android:textColor="@color/drawer_text"
                    android:textSize="20dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/campaign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/meward_nav_btn_selector"
                android:clickable="true"
                android:drawableLeft="@drawable/campaign"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="25dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:text="Campaigns"
                android:textColor="@color/drawer_text"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/meward_nav_btn_selector"
                android:clickable="true"
                android:drawableLeft="@drawable/history"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="25dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:text="History"
                android:textColor="@color/drawer_text"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/send_gift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/meward_nav_btn_selector"
                android:clickable="true"
                android:drawableLeft="@drawable/send_gift"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="25dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:text="Send Gift"
                android:textColor="@color/drawer_text"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/receive_gift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/meward_nav_btn_selector"
                android:clickable="true"
                android:drawableLeft="@drawable/receive_gift"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="25dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:text="Receive Gift"
                android:textColor="@color/drawer_text"
                android:textSize="20sp" />


        </LinearLayout>
    </RelativeLayout>

</ScrollView>